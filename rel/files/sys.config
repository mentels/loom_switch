[{ls, [
       {mode, proc_per_switch},
       %% {mode, regular}
       {logic_opts, [{idle_timeout, 10},
                     {hard_timeout, 30}]},
       {histogram_time_span_in_micros, 300000}, % 5 min
       {counter_time_span_in_micros, 300000} % 5 min
      ]},
 {exometer,
  [{report,
    [{subscribers,
      [{exometer_report_lager, [controller_handle_packet_in], mean, 60000}, % 1 min
       {exometer_report_lager, [app_handle_packet_in], mean, 60000},
       {exometer_report_lager, [fwd_table_size], mean, 60000},
       {exometer_report_lager, [flow_mod], [one, count], 60000},
       {exometer_report_lager, [packet_in], [one, count], 60000},
       {exometer_report_lager, [packet_out], [one, count], 60000}]
     }
    ]}
  ]},
 {of_driver,[ {listen_ip, {0,0,0,0}},
	      {listen_port, 6653},
	      {listen_opts,[binary, {packet, raw}, {active, false}, {reuseaddr, true}]},
              {of_compatible_versions, [4]},
              {callback_module, ofs_handler_driver},
              {enable_ping, false},
              {ping_timeout,1000},
              {ping_idle,5000},
              {multipart_timeout,30000}       %% IMPLEMENT
            ]},
 {ofs_handler,[
               {callback_module,ls_ofsh},
               {peer,"localhost"},
               {callback_opts,[]}
              ]},
 {lager,
  [{handlers,
    [{lager_console_backend,
      [debug,
       {lager_default_formatter,
        [{ls, [time, " [", severity, "] ", message, "\n"],[""]}]
       }]},
     {lager_file_backend, [{file, "log/error.log"}, {level, error},
                           {size, 10485760}, {date, "$D0"},{count, 5}]},
     {lager_file_backend, [{file, "log/notice.log"}, {level, notice}]},
     {lager_file_backend, [{file, "log/debug.log"}, {level, debug},
                           {size, 10485760}, {date, "$D0"},{count, 5}]}
    ]}
  ]},

 {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
        ]}
].

